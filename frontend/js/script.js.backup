function carregarRespostas() {
  fetch(API + '/respostas').then(r => r.json()).then(data => {
    const elem = document.getElementById('respostas-lista');
    if (!elem) return;
    if (!data || data.length === 0) {
      elem.innerHTML = '<p>Nenhuma resposta.</p>';
    } else {
      const respostasPromises = data.map(resp => {
        return fetch(API + '/votos/resposta/' + resp.id)
          .then(r => r.json())
          .then(votoData => ({ ...resp, votos: votoData.total || 0 }))
          .catch(() => ({ ...resp, votos: 0 }));
      });
      
      Promise.all(respostasPromises).then(respostasComVotos => {
        elem.innerHTML = respostasComVotos.map(r => 
          '<div>' +
            '<p>' + r.conteudo + '</p>' +
            '<div class="resposta-footer">' +
              '<span class="voto-count">Votos: ' + r.votos + '</span>' +
              '<div class="vote-buttons">' +
                '<button class="btn-vote btn-positive" onclick="votarResposta(' + r.id + ', 1)" id="btn-vote-positive-' + r.id + '">Positivo</button>' +
                '<button class="btn-vote btn-negative" onclick="votarResposta(' + r.id + ', -1)" id="btn-vote-negative-' + r.id + '">Negativo</button>' +
              '</div>' +
              '<button class="btn-delete" onclick="deletarResposta(' + r.id + ')" id="btn-delete-resposta-' + r.id + '">Deletar</button>' +
            '</div>' +
          '</div>'
        ).join('');
      });
    }
  }).catch(e => console.error(e));
}

document.addEventListener('DOMContentLoaded', function() {
